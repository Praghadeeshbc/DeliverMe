          </li>
          <li class="">
          
            <a href="#" >Requests</a>

          </li>
        </ul>
        
      </div></div> 

    <% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(error) { %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= error.msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>


    <% }); %>

    <% } %>

    <% if(success_msg !=''){ %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>

    <% if(error_msg !=''){ %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>


    <% if(error !=''){ %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>

    <input type="hidden" id="otheruser" value=<%=other_user%>>
    <div id="talkjs-container" style="width: 90%; margin: 30px; height: 500px">
        <i>Loading chat...</i>
    </div>
  </div></section>



    <script>
        var o = document.getElementById('otheruser').value;

        var otheruser;
        if (o.length > 1) {
            console.log(JSON.parse(o));
            otheruser = JSON.parse(o);
        }

        // console.log(JSON.parse(otheruser));
        Talk.ready.then(function () {
            var me = new Talk.User({
                id: "<%=user.mobile_no%>",
                name: "<%=user.user_name%>",
                email: "<%=user.email%>",
                welcomeMessage: "Hey I can buy your mentioned product",
                role: "helper"

            });

            window.talkSession = new Talk.Session({
                appId: "tRbXLssV",
                me: me
            });
            var conversation, inbox;
            if (o.length > 2) {
                console.log("herer");
                var other = new Talk.User({
                    id: otheruser.mobile_no,
                    name: otheruser.user_name,
                    email: otheruser.email,
                    welcomeMessage: "hi",
                    role: "helpseeker"


                });
                var conversation = talkSession.getOrCreateConversation(Talk.oneOnOneId(me, other));
                conversation.setParticipant(me);
                conversation.setParticipant(other);
                var inbox = talkSession.createInbox({ selected: conversation });
                inbox.mount(document.getElementById("talkjs-container"));
            }
            else {
                var inbox = talkSession.createInbox();
                inbox.mount(document.getElementById("talkjs-container"));
            }
        });
    </script>

